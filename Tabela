    < roteiro >

    // Funções adicionais para ajuste de tema
        função  detectTheme ( )  {
            retornar  janela . matchMedia  &&  janela . matchMedia ( '(prefere-esquema-de-cores: escuro)' ) . correspondências ? 'modo-escuro' : 'modo-claro' ;
        }

        documento . corpo . classList . adicionar ( detectTheme ( ) ) ;

        janela . matchMedia ( '(prefere-esquema-de-cores: escuro)' ) . addEventListener ( 'alterar' ,  evento  =>  {
            documento . corpo . nomedaclasse  =  evento . correspondências ? 'modo-escuro' : 'modo-claro' ;
        } ) ;
    </ script >
